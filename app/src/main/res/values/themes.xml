<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Supliikki" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_color</item>
        <item name="colorPrimaryVariant">@color/brand_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_color</item>
        <item name="colorSecondaryVariant">@color/brand_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/background_color</item>
        <!-- Customize your theme here. -->

        <item name="container_background">#00142f</item>
        <item name="background_color">#f0f0f0</item>
        <item name="snackbar_background_color">#111111</item>
        <item name="snackbar_text_color">#ffffff</item>
        <item name="text_color">#000000</item>
        <item name="container_text_color">#000000</item>
    </style>

    <style name="Theme.Supliikki.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_color</item>
        <item name="colorPrimaryVariant">@color/brand_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_color</item>
        <item name="colorSecondaryVariant">@color/brand_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/background_color</item>
        <!-- Customize your theme here. -->

        <item name="container_background">#00142f</item>
        <item name="background_color">#f0f0f0</item>
        <item name="snackbar_background_color">#111111</item>
        <item name="snackbar_text_color">#ffffff</item>
        <item name="text_color">#000000</item>
        <item name="container_text_color">#000000</item>
        <item name="appbar_color">@color/background_color</item>
    </style>

    <style name="Theme.Supliikki.LaunchScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_color</item>
        <item name="colorPrimaryVariant">@color/brand_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_color</item>
        <item name="colorSecondaryVariant">@color/brand_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/background_color</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
</resources>